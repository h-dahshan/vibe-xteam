{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2017",

    "plugins": [{ "name": "next" }],

    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve",

    "types": ["vitest/globals"]
  }
}
