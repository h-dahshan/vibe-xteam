{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",

    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "types": ["vitest/globals"]
  }
}
